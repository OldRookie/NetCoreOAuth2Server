@model OAuth2Server.App.Authorization.UI.Login.LoginViewModel

<div class="login-page">
    <div class="page-header center">
        <h1>Login</h1>
    </div>

            <div class="panel panel-login panel-default">
                <div class="panel-body">

                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username">Email address or Username</label>
                                <input class="form-control" placeholder="Email address or Username" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                <a asp-area="" asp-controller="Account" asp-action="ResetRequest">Forgot your password</a>
                            </div>
                            <div class="form-group login-remember">
                                <label asp-for="RememberLogin">
                                    <input asp-for="RememberLogin">
                                    <strong>Remember My Login</strong>
                                </label>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-login btn-primary">Login</button>
                            </div>
                        </fieldset>
                    </form>
                </div>

                @Html.Partial("_ValidationSummary")

                @if (Model.AuthenticationResult != OAuth2Server.Security.AuthenticationResult.None)
                {
                   <div class="alert alert-danger alert-error">
                        <p>@Model.ErrorMessage</p>
                   </div>
                }
            </div>
        </div>