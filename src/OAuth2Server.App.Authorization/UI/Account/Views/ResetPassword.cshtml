@model OAuth2Server.App.Authorization.UI.Account.ResetPasswordViewModel

<div class="login-page">
    <div class="page-header center">
        <h1>Reset Password</h1>
    </div>

    <div class="center">
            <div class="panel panel-login panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Reset your password below</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="Account">
                        <input type="hidden" asp-for="Code" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Username" asp-for="Email" readonly autofocus>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Enter new password</label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Re-enter new password</label>
                                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Confirm</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
    </div>
</div>